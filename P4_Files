f = open('kipling.txt','r')
print(f.read())
f.close()


f = open('kipling.txt','r')
print(f.readline())
f.close()


f = open('kipling.txt','r')
print(f.readlines())
f.close()


f = open('kipling.txt','a')
f.write('\nHey just looking for appending texts')  
f.close()

with open('kipling.txt','r') as f:
    for line in f.readlines():
        print(line, end = "")
